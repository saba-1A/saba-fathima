{%- style -%}
  @import url('https://fonts.googleapis.com/css2?family=Jost:wght@400;500&display=swap');

  /* This stays here to ensure EVERY version we add is centered */
  #Section-{{ section.id }} .custom-navbar-wrapper {
    width: 100%;
    background-color: #ffffff;
    display: flex;
    justify-content: center;
    overflow: hidden;
  }

  #Section-{{ section.id }} .custom-banner {
    width: 100%; 
    font-family: 'Jost', sans-serif;
    color: #000000;
  }

  /* Here Desktop V1 centered without affecting V2 */
  #Section-{{ section.id }} .custom-banner__desktop-only {
    max-width: 1440px;
    margin: 0 auto;
  }

  /* Hiding the Desktop Navbar on screens smaller than 768px */
  @media screen and (max-width: 768px) {
    #Section-{{ section.id }} .custom-banner__desktop-only {
      display: none;
    }
  }

  /* Hiding Mobile version on anything larger than a phone */
  @media screen and (min-width: 769px) {
    #Section-{{ section.id }} .custom-banner__mobile-only {
      display: none !important;
    }
  }

/* Hiding the 4K version on standard screens */
  @media screen and (max-width: 2560px) {
    #Section-{{ section.id }} .custom-banner__4k-only {
      display: none;
    }
  }

  /* Hiding the standard desktop version on 4K screens */
  @media screen and (min-width: 2561px) {
    #Section-{{ section.id }} .custom-banner__desktop-only {
      display: none;
    }
  }
  
{%- endstyle -%}


<div class="custom-navbar-wrapper">
  <div class="custom-banner" id="Section-{{ section.id }}">
    
<div class="custom-banner__desktop-only">
      {% render 'navbar-v1', section: section %}
      {% render 'hero-v1-full', section: section %}
    </div>

<div class="custom-banner__mobile-only">
      {% render 'navbar-mobile', section: section %}
      {%- comment -%} This calls your new mobile hero file {%- endcomment -%}
      {% render 'hero-mobile', section: section %}
    </div>

<div class="custom-banner__4k-only">
      {% render 'navbar-v2', section: section %}
      {% render 'hero-bg-4k', section: section %}
    </div>

  </div>
</div>

