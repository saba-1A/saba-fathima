<div class="v1-container">
  
  <!-- Title Section (Gap 30px ) -->
  <div class="v1-title-wrapper">
    <h2 class="v1-title">Tisso vison in the wild</h2>
  </div>

  <!-- Grid Section (Frame 1000009723) -->
  <div class="v1-grid">
    {% for i in (1..6) %}
      {% capture prod_key %}prod_{{ i }}{% endcapture %}
      {% assign product = all_products[section.settings[prod_key]] %}
      
      <!-- Card Item + Button Wrapper -->
      <!-- We group them, but CSS will position button relative to the GRID -->
      <div class="v1-item-group">
        
        <!-- Product Image -->
        <div class="v1-item">
          {% if product != blank %}
            <img src="{{ product.featured_image | image_url: width: 1000 }}" alt="{{ product.title }}">
          {% else %}
            {{ 'product-1' | placeholder_svg_tag }}
          {% endif %}
        </div>

        <!-- Hotspot Button -->
        <button class="v1-hotspot js-open-popup" 
                data-product-handle="{{ product.handle }}"
                data-product-json="{{ product | json | escape }}">
          <!-- Plus Icon (Pic 6: 8.46px size) -->
          <svg width="9" height="9" viewBox="0 0 9 9" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M4.5 0V9M0 4.5H9" stroke="black" stroke-width="1.5"/>
          </svg>
        </button>

      </div>
    {% endfor %}
  </div>

</div>

<style>
  /* --- 1. Main Container --- */
  .v1-container {
    width: 100%;
    /* Pic 2: Fixed Width 1337px */
    max-width: 1337px; 
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
  }

  /* --- 2. Title Section --- */
  .v1-title-wrapper {
    width: 100%;
    margin-bottom: 30px; 
  }

  .v1-title {
    font-family: 'Lustria', serif; 
    font-weight: 400;              
    font-size: 36px; /* Estimated from visual hierarchy */              
    line-height: 120%;             
    color: #000000;                
    margin: 0;
  }

  /* --- 3. Grid Layout --- */
  .v1-grid {
    position: relative; /* Acts as the anchor for the absolute buttons */
    display: grid;
    /* Calculation: 433px * 3 + 20px gap * 2 = 1339px */
    width: 1339px; 
    grid-template-columns: repeat(3, 433px); 
    grid-template-rows: repeat(2, 444px);
    gap: 20px; 
    margin: 0 auto;
  }

  /* --- 4. Card Item (Pic 4) --- */
  .v1-item {
    width: 433px;  
    height: 444px; 
    border: 1.5px solid #000000; 
    box-sizing: border-box;
    overflow: hidden;
  }

  .v1-item img, 
  .v1-item svg { 
    width: 100%; 
    height: 100%; 
    object-fit: cover; 
    display: block;
  }

  /* --- 5. Hotspot Button  --- */
  .v1-hotspot {
    position: absolute; /* Positioned relative to .v1-grid */
    width: 22px;  
    height: 22px; 
    
    background: rgba(248, 248, 248, 0.9); 
    border: 1px solid rgba(0, 0, 0, 1);   
    border-radius: 50%; /* Standard for hotspots, shows rounded container */
    
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: transform 0.2s ease;
  }

  .v1-hotspot:hover {
    transform: scale(1.1);
  }

  /* --- 6. Exact Coordinates --- */
  /* These map the buttons to the Figma "Group" positions provided */
  
  /* Product 1  */
  .v1-item-group:nth-child(1) .v1-hotspot {
    top: 238px;
    left: 256.5px;
  }

  /* Product 2  */
  .v1-item-group:nth-child(2) .v1-hotspot {
    top: 222px;
    left: 808.5px;
  }

  /* Product 3 */
  .v1-item-group:nth-child(3) .v1-hotspot {
    top: 82px;
    left: 1167px;
  }

  /* Product 4 */
  .v1-item-group:nth-child(4) .v1-hotspot {
    top: 535px; 
    left: 301.5px;
  }

  /* Product 5  */
  .v1-item-group:nth-child(5) .v1-hotspot {
    top: 568px; 
    left: 665.5px;
  }

  /* Product 6  */
  .v1-item-group:nth-child(6) .v1-hotspot {
    top: 628px; 
    left: 1225.5px;
  }
</style>