<div class="v1-grid">
  {% for i in (1..6) %}
    {% capture img_id %}img_{{ i }}{% endcapture %}
    <div class="v1-item">
      {% if section.settings[img_id] != blank %}
        <img src="{{ section.settings[img_id] | image_url: width: 1000 }}" alt="Product {{ i }}">
        <div class="v1-plus">+</div>
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
  .v1-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); 
    width: 1339px;  
    margin: 0 auto;
    gap: 20px;
  }
  .v1-item {
    position: relative;
    width: 433px;   
    height: 444px; 
    border: 1.5px solid #000; 
    overflow: hidden;
  }
  .v1-item img { width: 100%; height: 100%; object-fit: cover; }
  .v1-plus {
    position: absolute;
    top: 20px;
    right: 20px;
    background: #fff;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }
</style>