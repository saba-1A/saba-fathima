{%- style -%}
  /* --- Mobile Container (Frame 1958) --- */
  #Section-{{ section.id }} .hero-mobile-wrapper {
    position: relative;
    width: 100%;
    height: 421px; 
    background-color: #ffffff; 
    overflow: hidden; /* Clips the wide image */
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: 'Jost', sans-serif;
  }

  /* --- Title  --- */
  #Section-{{ section.id }} .hero-mobile-title {
    position: absolute;
    top: 49px; 
    width: 100%;
    text-align: center;
    font-size: 30px; 
    font-weight: 500; 
    line-height: 100%;
    color: #000000;
    margin: 0;
    padding: 0;
    z-index: 2;
  }

  /* --- Subtitle  --- */
  #Section-{{ section.id }} .hero-mobile-para {
    position: absolute;
    top: 103px; 
    width: 340px; 
    text-align: center;
    font-size: 16px; 
    font-weight: 400;
    line-height: 130%;
    color: #000000;
    margin: 0;
    z-index: 2;
    left: 50%;
    transform: translateX(-50%);
  }

  /* --- Hero Image  --- */
  #Section-{{ section.id }} .hero-mobile-image-container {
    position: absolute;
    top: 157px; /* Pic 9 Top */
    /* Width is 686px, much wider than mobile screen (375px) */
    width: 686px; 
    height: 264px; 
    left: 50%;
    transform: translateX(-50%); /* Centers the wide image */
    z-index: 1;
  }

  #Section-{{ section.id }} .hero-mobile-main-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* --- Button  --- */
  #Section-{{ section.id }} .hero-mobile-btn {
    position: absolute;
    top: 337px; /*Top position relative to frame */
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    
    display: inline-flex;             
    align-items: center;
    justify-content: center;
    gap: 10px; 
    
    /* Layout  */
    width: auto; /* Hugs content */
    min-width: 193px; 
    height: 45px; 
    padding: 13px 20px; 
    
    background-color: #000000; 
    color: #ffffff;            
    text-decoration: none;
    
    /* Typography */
    font-family: 'Jost', sans-serif;
    font-size: 16px;
    font-weight: 400; /* Regular */
    line-height: 20.48px;
    text-transform: uppercase;
    white-space: nowrap;
    transition: background-color 0.3s ease, color 0.3s ease;
  }
  
  #Section-{{ section.id }} .hero-mobile-btn:hover {
    background-color: #FFEB3B; 
    color: #000000;
  }

  /* --- Button Arrow --- */
  #Section-{{ section.id }} .hero-mobile-btn svg {
    width: 24px; 
    height: 12px;
    display: block;
  }
  
  #Section-{{ section.id }} .hero-mobile-btn path {
    stroke: #ffffff;
    transition: stroke 0.3s ease;
  }
  
  #Section-{{ section.id }} .hero-mobile-btn:hover path {
    stroke: #000000;
  }

  /* --- Bottom Bar  --- */
  #Section-{{ section.id }} .hero-mobile-bar {
    width: 100%;
    /* Height is 'Hug' (34px) in Figma */
    background-color: #F5F5F5; /* Pic 7 */
    padding: 10px 50px; /* Pic 7 Padding */
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #Section-{{ section.id }} .hero-mobile-bar-text {
    font-family: 'Jost', sans-serif;
    font-size: 14px; 
    font-weight: 400;
    line-height: 13.42px;
    color: #000000;
    margin: 0;
    text-transform: uppercase;
    text-align: center;
    white-space: nowrap;
  }
{%- endstyle -%}

<!-- Mobile Wrapper  -->
<div class="hero-mobile-wrapper">
  
  <!-- Title  -->
  <h2 class="hero-mobile-title">
    {{ section.settings.hero_title_mobile | default: "The Gift Guide" }}
  </h2>

  <!-- Subtitle -->
  <p class="hero-mobile-para">
    {{ section.settings.hero_subtitle_mobile | default: "Discover Joy: Your Ultimate Holiday Gift Destination." }}
  </p>

  <!-- Image  -->
  <div class="hero-mobile-image-container">
    {% if section.settings.hero_bg_image_mobile != blank %}
      <img src="{{ section.settings.hero_bg_image_mobile | image_url: width: 800 }}" class="hero-mobile-main-img" alt="Hero Mobile Image">
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>

  <!-- Button -->
  <a href="{{ section.settings.hero_btn_link_mobile | default: section.settings.hero_btn_link }}" class="hero-mobile-btn">
    {{ section.settings.hero_btn_text_mobile | default: "Shop Now" }}
    
    <!-- Custom SVG Arrow: Width 24px, Stroke 1.5px, with Arrowhead added -->
    <svg width="24" height="12" viewBox="0 0 24 12" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0 6H24M24 6L19 1M24 6L19 11" stroke-width="1.5"/>
    </svg>
  </a>

</div>

<!-- Bottom Bar (Pic 7) -->
<div class="hero-mobile-bar">
  <p class="hero-mobile-bar-text">
    {{ section.settings.footer_text | default: "SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR" }}
  </p>
</div>