{%- style -%}
  /* --- Main Container --- */
  #Section-{{ section.id }} .hero-v1-container {
    width: 100%;
    max-width: 1440px;
    display: flex;
    flex-direction: column;
    background-color: #ffffff;
    margin: 0 auto;
  }

  /* --- Top Section --- */
  #Section-{{ section.id }} .hero-v1-top {
    width: 100%;
    height: 390px; 
    overflow: hidden;
    position: relative;
  }
  #Section-{{ section.id }} .hero-v1-top img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* --- Bottom Section (Split Row) --- */
  #Section-{{ section.id }} .hero-v1-bottom-row {
    display: flex;
    width: 100%;
    height: 402px; 
    align-items: stretch;
  }

  /* Left Side: Text Content */
  #Section-{{ section.id }} .hero-v1-text-col {
    flex: 1;
    padding: 0 0 0 67px; 
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: left;
  }

  /* --- THE GIFT GUIDE --- */
  #Section-{{ section.id }} .hero-v1-text-col h1 {
    font-family: 'Jost', sans-serif;
    font-size: 70px;         
    line-height: 100%;       
    font-weight: 500;        /* Medium weight */
    color: rgba(0, 0, 0, 1); 
    letter spacing : 0px:
    
    /* Layout Dimensions */
    width: 459px;            
    height: 70px;           
    margin: 0 0 50px 0;      /* Space below before paragraph */
    
    text-transform: uppercase;
    display: block;
    white-space: nowrap;     /* Keeps it on one line as per Figma */
    letter-spacing: 0px;
  }

  /* SUBTITLE (PIC 8) */
  #Section-{{ section.id }} .hero-v1-text-col p {
    font-family: 'Jost', sans-serif;
    font-size: 20px;           
    font-weight: 400;           
    line-height: 1.4;           /* Standard readability for Jost 20px */
    color: #000000;
    
    width: 483px;              
    margin: 0 0 50px 0;         /* Spacing below the para before the button */
    
    text-align: left;
    display: block;
  }

  /* Right Side: Second Image */
  #Section-{{ section.id }} .hero-v1-image-col {
    width: 890px; /* Pic 4 width */
    height: 402px; /* Pic 4 height */
    overflow: hidden;
  }
  #Section-{{ section.id }} .hero-v1-image-col img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* --- HERO BUTTON (SLIDING EFFECT) --- */
  #Section-{{ section.id }} .hero-v1-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 220px;
    height: 50px;
    background-color: #000000;
    color: #ffffff;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    text-transform: uppercase;
    overflow: hidden;
    z-index: 1;
    transition: color 0.4s ease;
  }

  #Section-{{ section.id }} .hero-v1-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%; 
    width: 100%;
    height: 100%;
    background-color: #FFEB3B;
    transition: left 0.4s ease;
    z-index: -1;
  }

  #Section-{{ section.id }} .hero-v1-btn:hover { color: #000000; }
  #Section-{{ section.id }} .hero-v1-btn:hover::before { left: 0; }
  #Section-{{ section.id }} .hero-v1-btn span { margin-left: 15px; font-size: 20px; }
/* --- FOOTER BAR (PIC 10) --- */
  #Section-{{ section.id }} .hero-v1-footer-bar {
    width: 100%;
    max-width: 1440px;
    height: 34px;           
    background-color: #F5F5F5;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 50px; 
    border-top: 1px solid #e0e0e0;
    box-sizing: border-box;
  }

  #Section-{{ section.id }} .hero-v1-footer-text {
    font-family: 'Jost', sans-serif;
    font-size: 10px;        
    font-weight: 400;
    color: #000000;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    white-space: nowrap;
    line-height: 13.42px;   
    text-align: center;
  }
{%- endstyle -%}

<div class="hero-v1-container">
  <div class="hero-v1-top">
    {% if section.settings.hero_bg_image != blank %}
      <img src="{{ section.settings.hero_bg_image | image_url: width: 1440 }}" alt="{{ section.settings.hero_title }}" loading="lazy">
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>

  <div class="hero-v1-bottom-row">
    <div class="hero-v1-text-col">
      <h1>{{ section.settings.hero_title | default: "The Gift Guide" }}</h1>

      <p>{{ section.settings.hero_subtitle }}</p>
      
      <a href="{{ section.settings.hero_btn_link }}" class="hero-v1-btn">
        {{ section.settings.hero_btn_text | default: "SHOP NOW" }} <span>&rarr;</span>
      </a>
    </div>

    <div class="hero-v1-image-col">
      {% if section.settings.hero_bg_image_2 != blank %}
        <img src="{{ section.settings.hero_bg_image_2 | image_url: width: 890 }}" alt="{{ section.settings.hero_title }}" loading="lazy">
      {% else %}
        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </div>

  <div class="hero-v1-footer-bar">
    <div class="hero-v1-footer-text">
      {{ section.settings.footer_text }}
    </div>
  </div>
</div>