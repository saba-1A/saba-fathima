{%- style -%}
  /* --- Main Container (Pic 3: Group Wrapper) --- */
  #Section-{{ section.id }} .hero-v1-container {
    width: 100%;
    max-width: 1440px;
    display: flex;
    flex-direction: column;
    background-color: #ffffff;
    margin: 0 auto;
    box-sizing: border-box;
  }

  /* --- Top Section (Pic 1: Frame) --- */
  #Section-{{ section.id }} .hero-v1-top {
    width: 100%;
    height: 390px; 
    overflow: hidden;
    position: relative;
  }
  #Section-{{ section.id }} .hero-v1-top img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* --- Bottom Section (Split Row) --- */
  #Section-{{ section.id }} .hero-v1-bottom-row {
    display: flex;
    width: 100%;
    height: 402px; /* Matches Pic 2 height */
    align-items: stretch;
  }

  /* Left Side: Text Content 
     Calculation: Total 1440px - Image 890px = 550px Width 
  */
  #Section-{{ section.id }} .hero-v1-text-col {
    width: 550px;
    padding: 0 0 0 67px; /* Left Spacing from Pic 6 & 8 */
    display: flex;
    flex-direction: column;
    justify-content: center; /* Vertically center content */
    text-align: left;
    box-sizing: border-box;
  }

  /* --- THE GIFT GUIDE (Pic 6) --- */
  #Section-{{ section.id }} .hero-v1-text-col h1 {
    font-family: 'Jost', sans-serif;
    font-size: 70px;         
    line-height: 100%;       
    font-weight: 500;        /* Medium */
    color: rgba(0, 0, 0, 1); 
    
    /* Layout Dimensions from Pic 6 */
    width: 459px;            
    margin: 0 0 50px 0;      /* Gap between title and subtitle */
    
    text-transform: capitalize; /* Or uppercase depending on content input, Figma shows Title Case */
    display: block;
    white-space: nowrap;     
    letter-spacing: 0px;
  }

  /* SUBTITLE (Pic 7) */
  #Section-{{ section.id }} .hero-v1-text-col p {
    font-family: 'Jost', sans-serif;
    font-size: 20px;           
    font-weight: 400;        /* Regular */
    line-height: 140%;       /* 28px approx */
    color: #000000;
    
    width: 483px;            /* Exact width from Pic 7 */
    margin: 0 0 50px 0;      /* Gap between subtitle and button */
    
    text-align: left;
    display: block;
  }

  /* Right Side: Second Image (Pic 2) */
  #Section-{{ section.id }} .hero-v1-image-col {
    width: 890px; /* Exact width from Pic 2 */
    height: 402px;
    overflow: hidden;
  }
  #Section-{{ section.id }} .hero-v1-image-col img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* --- HERO BUTTON (Pic 8 & 9) --- */
  #Section-{{ section.id }} .hero-v1-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 220px;   /* Pic 8 */
    height: 50px;   /* Pic 8 */
    background-color: #000000;
    color: #ffffff;
    text-decoration: none;
    font-family: 'Jost', sans-serif;
    font-size: 16px;   /* Pic 9 */
    font-weight: 400;  /* Pic 9 (Regular) */
    text-transform: uppercase;
    letter-spacing: 0px;
    line-height: 20.48px;
    overflow: hidden;
    z-index: 1;
    transition: color 0.4s ease;
  }

  #Section-{{ section.id }} .hero-v1-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%; 
    width: 100%;
    height: 100%;
    background-color: #FFEB3B;
    transition: left 0.4s ease;
    z-index: -1;
  }

  #Section-{{ section.id }} .hero-v1-btn:hover { color: #000000; }
  #Section-{{ section.id }} .hero-v1-btn:hover::before { left: 0; }
  
  /* Arrow Styling (Pic 10) */
  #Section-{{ section.id }} .hero-v1-btn svg { 
    margin-left: 15px; 
    width: 26px; /* Approx 25.51px */
    height: auto;
    display: block;
  }
  
  /* Arrow Line Color Transition */
  #Section-{{ section.id }} .hero-v1-btn path {
    stroke: #ffffff;
    transition: stroke 0.4s ease;
  }
  #Section-{{ section.id }} .hero-v1-btn:hover path {
    stroke: #000000;
  }

  /* --- FOOTER BAR (Pic 4 & 5) --- */
  #Section-{{ section.id }} .hero-v1-footer-bar {
    width: 100%;
    max-width: 1440px;
    /* Height is 'Hug' in Figma, determined by padding + text */
    background-color: #F5F5F5; /* Matches Pic 4 colors */
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px 50px; /* Pic 4 Padding */
    box-sizing: border-box;
  }

  #Section-{{ section.id }} .hero-v1-footer-text {
    font-family: 'Jost', sans-serif;
    font-size: 16px;        /* Pic 5 Size */
    font-weight: 400;
    color: #000000;
    text-transform: uppercase;
    letter-spacing: 0px;
    line-height: 13.42px;   /* Pic 5 Line Height */
    text-align: center;
  }
{%- endstyle -%}

<div class="hero-v1-container">
  <!-- Top Image -->
  <div class="hero-v1-top">
    {% if section.settings.hero_bg_image != blank %}
      <img src="{{ section.settings.hero_bg_image | image_url: width: 1440 }}" alt="{{ section.settings.hero_title }}" loading="lazy">
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>

  <!-- Bottom Split Section -->
  <div class="hero-v1-bottom-row">
    <!-- Left: Text -->
    <div class="hero-v1-text-col">
      <h1>{{ section.settings.hero_title | default: "The Gift Guide" }}</h1>

      <p>{{ section.settings.hero_subtitle }}</p>
      
      <a href="{{ section.settings.hero_btn_link }}" class="hero-v1-btn">
        {{ section.settings.hero_btn_text | default: "SHOP NOW" }} 
        <!-- SVG Arrow matching Pic 10: 25.51px wide, 1.5px stroke, with Arrow Head -->
        <svg width="26" height="12" viewBox="0 0 26 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 6H25M25 6L20 1M25 6L20 11" stroke-width="1.5"/>
        </svg>
      </a>
    </div>

    <!-- Right: Image -->
    <div class="hero-v1-image-col">
      {% if section.settings.hero_bg_image_2 != blank %}
        <img src="{{ section.settings.hero_bg_image_2 | image_url: width: 890 }}" alt="{{ section.settings.hero_title }}" loading="lazy">
      {% else %}
        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="hero-v1-footer-bar">
    <div class="hero-v1-footer-text">
      {{ section.settings.footer_text }}
    </div>
  </div>
</div>