<!-- Load Font from Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lustria&display=swap" rel="stylesheet">

<div class="tisso-mobile-outer-frame">
  <div class="tisso-mobile-inner-layout">
    
    <!-- Title Section -->
    <div class="tisso-header">
      Tisso vison in the wild
    </div>
  
    <!-- Grid Section -->
    <div class="v1-mobile-grid">
      {% for i in (1..6) %}
        {% capture prod_id %}prod_{{ i }}{% endcapture %}
        {% capture mob_img_id %}mob_img_{{ i }}{% endcapture %}
        
        {% assign product = all_products[section.settings[prod_id]] %}
        {% assign custom_img = section.settings[mob_img_id] %}
        
        <!-- Product Item  -->
        <div class="v1-mobile-item">
          {% if product != blank or custom_img != blank %}
            
            <!-- Image Logic -->
            {% if custom_img != blank %}
              <img src="{{ custom_img | image_url: width: 400 }}" alt="{{ product.title }}">
            {% elsif product != blank %}
              <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
            {% endif %}
            
            <!-- Plus Button -->
            <!-- Position is uniform across all products based on Figma coordinates -->
            <button class="v1-mobile-plus js-open-popup" 
                    data-product-json="{{ product | json | escape }}">
              <span class="plus-icon-inner"></span>
            </button>
  
          {% else %}
            <!-- Placeholder -->
            {{ 'product-1' | placeholder_svg_tag }}
             <button class="v1-mobile-plus">
              <span class="plus-icon-inner"></span>
            </button>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  /* --- Outer Frame (Frame 1000008132) --- */
  .tisso-mobile-outer-frame {
    width: 100%;
    max-width: 375.44px;  */
    margin: 0 auto;
    background-color: #ffffff;
    display: flex;
    justify-content: center;
    padding-bottom: 20px;
  }

  /* --- Inner Layout (Frame 1000009745) --- */
  .tisso-mobile-inner-layout {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 342px; 
    gap: 20px;    
  }

  /* --- Typography --- */
  .tisso-header {
    font-family: 'Lustria', serif;
    font-style: normal;
    font-weight: 400;
    font-size: 24px;
    line-height: 120%; /* 29px approx */
    text-align: center;
    color: rgba(0, 0, 0, 1);
    
    /* Layout Dimensions  */
    width: 248px; 
    height: auto;
    margin: 0 auto; /* Centered */
  }

  /* --- Grid Layout (Frame 1000009723) --- */
  .v1-mobile-grid {
    display: grid;
    grid-template-columns: repeat(2, 169px); /* Two columns of 169px */
    width: 342px;
    gap: 4px; /* Pic 4 Gap */
    justify-content: center;
  }
  
  /* --- Product Item (Group 1000008142) --- */
  .v1-mobile-item {
    position: relative;
    width: 169px;      
    height: 186.42px;  
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 1); /* Border */
    box-sizing: border-box; 
  }
  
  .v1-mobile-item img,
  .v1-mobile-item svg { 
    width: 100%; 
    height: 100%; 
    object-fit: cover; 
    display: block;
  }

  /* --- Plus Button  --- */
  .v1-mobile-plus {
    position: absolute;
    z-index: 2;
    padding: 0;
    cursor: pointer; 
    
    /* Dimensions  */
    width: 15.71px; 
    height: 15.71px;
    
    /* Styling  */
    background: rgba(248, 248, 248, 0.9);
    border: 1px solid rgba(0, 0, 0, 1);
    border-radius: 0; /* Figma shows square with border, usually standard for this style */
    /* If Figma shows a circle in the preview, change to 50%. Based on 'Group', it's likely a square or slight radius. 
       Keeping square/default unless 'Corner Radius' was specified, but usually these micro-buttons are circular in standard UI.
       Let's assume square based on the border data, add radius if needed. */
    border-radius: 50%; /* Safest bet for 'Plus' buttons */
    
    display: flex; 
    align-items: center; 
    justify-content: center;

    /* 
       POSITIONING CALCULATION :
       Item 1 Left: 101.29px (Absolute 101.29 - Item Start 0 = 101.29)
       Item 2 Left: 274.29px (Absolute 274.29 - Item Start 173 = 101.29)
       Result: The button is always in the same spot relative to the image.
    */
    top: 18px; 
    left: 101.29px; 
  }

  /* --- Plus Icon Inner Vector --- */
  .plus-icon-inner {
    position: relative;
    width: 6.04px;  
    height: 6.04px; 
    display: block;
  }

  .plus-icon-inner::before,
  .plus-icon-inner::after {
    content: '';
    position: absolute;
    background-color: #000;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  /* Horizontal Line */
  .plus-icon-inner::before {
    width: 6.04px;
    height: 1px; /* Stroke width 1px */
  }

  /* Vertical Line */
  .plus-icon-inner::after {
    width: 1px; /* Stroke width 1px */
    height: 6.04px;
  }
</style>