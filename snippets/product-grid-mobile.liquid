<!-- Load Font from Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lustria&display=swap" rel="stylesheet">

<div class="tisso-mobile-wrapper">
  
  <!-- Title Section -->
  <div class="tisso-header">
    Tisso vison in the wild
  </div>

  <!-- Grid Section -->
  <div class="v1-mobile-grid">
    {% for i in (1..6) %}
      {% capture prod_id %}prod_{{ i }}{% endcapture %}
      {% capture mob_img_id %}mob_img_{{ i }}{% endcapture %}
      
      {% assign product = all_products[section.settings[prod_id]] %}
      {% assign custom_img = section.settings[mob_img_id] %}
      
      <div class="v1-mobile-item">
        {% if product != blank %}
          
          <!-- Image Logic -->
          {% if custom_img != blank %}
            <img src="{{ custom_img | image_url: width: 400 }}" alt="{{ product.title }}">
          {% else %}
            <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
          {% endif %}
          
          <!-- Plus Button -->
          <button class="v1-mobile-plus js-open-popup" 
                  data-product-json="{{ product | json | escape }}">
            <span class="plus-icon-inner"></span>
          </button>

        {% else %}
          <!-- Placeholder -->
          {{ 'product-1' | placeholder_svg_tag }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  /* Main Container - Frame 1000009745 */
  .tisso-mobile-wrapper {
    display: flex;
    flex-direction: column;
    width: 342px; /* Fixed Layout Width */
    margin: 0 auto;
    gap: 20px; /* Gap between Text and Grid */
  }

  /* Typography */
  .tisso-header {
    font-family: 'Lustria', serif;
    font-style: normal;
    font-weight: 400;
    font-size: 24px;
    line-height: 120%; /* 29px approx */
    text-align: center;
    color: rgba(0, 0, 0, 1);
    width: 100%;
  }

  /* Grid Layout - Frame 1000009723 */
  .v1-mobile-grid {
    display: grid;
    grid-template-columns: repeat(2, 169px); /* Two columns of 169px */
    width: 342px;
    gap: 4px; /* Horizontal and Vertical Gap */
    justify-content: center;
  }
  
  /* Product Item - Group 1000008142 */
  .v1-mobile-item {
    position: relative;
    width: 169px;      
    height: 186.42px;  
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 1); /* Pic 9 Border */
    box-sizing: border-box; /* Ensures border is inside the width */
  }
  
  .v1-mobile-item img { 
    width: 100%; 
    height: 100%; 
    object-fit: cover; 
    display: block;
  }
  
  .v1-mobile-item svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Plus Button Container - Group 1000008196 */
  .v1-mobile-plus {
    position: absolute;
    /* Exact coordinates from Pic 10 */
    top: 18px; 
    left: 101.29px; 
    
    width: 15.71px; 
    height: 15.71px;
    background: rgba(248, 248, 248, 0.9);
    border: 1px solid rgba(0, 0, 0, 1);
    border-radius: 50%;
    
    display: flex; 
    align-items: center; 
    justify-content: center;
    cursor: pointer; 
    padding: 0;
    z-index: 2;
  }

  /* Plus Icon Inner */
  /* Creating the 6.04px cross using CSS to be exact */
  .plus-icon-inner {
    position: relative;
    width: 6.04px;
    height: 6.04px;
    display: block;
  }

  .plus-icon-inner::before,
  .plus-icon-inner::after {
    content: '';
    position: absolute;
    background-color: #000;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  /* Horizontal Line */
  .plus-icon-inner::before {
    width: 6.04px;
    height: 1px;
  }

  /* Vertical Line */
  .plus-icon-inner::after {
    width: 1px;
    height: 6.04px;
  }
</style>