<div class="v1-mobile-grid">
  {% for i in (1..6) %}
    {% capture img_id %}img_{{ i }}{% endcapture %}
    <div class="v1-mobile-item">
      {% if section.settings[img_id] != blank %}
        <img src="{{ section.settings[img_id] | image_url: width: 600 }}" alt="Mobile Product {{ i }}">
        <div class="v1-mobile-plus">+</div>
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
  .v1-mobile-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); 
    width: 342px; 
    margin: 0 auto;
    gap: 4px; /* Tight gap for mobile */
  }
  .v1-mobile-item {
    position: relative;
    width: 169px;  
    height: 186.42px; 
    overflow: hidden;
  }
  .v1-mobile-item img { width: 100%; height: 100%; object-fit: cover; }
  .v1-mobile-plus {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #fff;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: bold;
  }
</style>