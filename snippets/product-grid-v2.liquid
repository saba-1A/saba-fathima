{% comment %}
  V2 GRID - 4K/Ultra-Wide Layout
  Based on Figma Dimensions:
  - Container: 2844.3px
  - Item: 919.78px x 943.14px
{% endcomment %}

<div class="v2-desktop-grid">
  {% for i in (1..6) %}
    {% capture img_key %}wide_img_{{ i }}{% endcapture %}
    {% capture prod_key %}prod_{{ i }}{% endcapture %}

    {% assign current_image = section.settings[img_key] %}
    {% assign current_product = all_products[section.settings[prod_key]] %}

    <div class="v2-grid-item">
      {% if current_image != blank %}
        
        <!-- High Res Image -->
        <img 
          src="{{ current_image | image_url: width: 2000 }}" 
          alt="{{ current_product.title | default: 'Product Image' }}"
          loading="lazy"
          class="v2-main-image"
        >

        <!-- 
           Hotspot / Open Button 
           
        -->
        {% if current_product != blank %}
          <button class="v2-hotspot js-open-popup" 
                  data-product-json='{{ current_product | json | escape }}'
                  aria-label="Open product details">
            <span class="v2-plus-icon"></span>
          </button>
        {% endif %}

      {% else %}
        <!-- Fallback if no image -->
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
  /* 
     CSS embedded here to ensure V2 specific styles 
     are applied correctly within the snippet 
  */

  .v2-main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .v2-grid-item svg.placeholder-svg {
    width: 100%;
    height: 100%;
    fill: #e1e1e1;
  }

  /* HOTSPOT STYLING  */
  .v2-hotspot {
    position: absolute;
    /* 
       Positioning: 
       In Figma Mobile, Left is ~90% of width.
       We apply similar logic here for the 4K image.
    */
    top: 30px; 
    right: 30px; 
    
    /* Size: Scaled up slightly for 4K visibility, preserving aspect ratio */
    width: 44px;
    height: 44px;
    
    /* Colors  */
    background: rgba(248, 248, 248, 0.9);
    border: 2px solid rgba(0, 0, 0, 1); /* Slightly thicker for 4K res */
    border-radius: 50%;
    
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
    padding: 0;
    transition: transform 0.3s ease, background 0.3s;
  }

  .v2-hotspot:hover {
    transform: scale(1.1);
    background: rgba(255, 255, 255, 1);
  }

  /* PLUS ICON INSIDE */
  .v2-plus-icon {
    position: relative;
    width: 14px;
    height: 14px;
    display: block;
  }

  .v2-plus-icon::before,
  .v2-plus-icon::after {
    content: '';
    position: absolute;
    background-color: #000; /* Black Icon */
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  /* Vertical Line */
  .v2-plus-icon::after {
    width: 2px;
    height: 14px;
  }

  /* Horizontal Line */
  .v2-plus-icon::before {
    width: 14px;
    height: 2px;
  }
</style>