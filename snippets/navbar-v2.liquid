{%- style -%}
  /* --- Top Bar (NAVBAR V2 - 4K Desktop) --- */
  #Section-{{ section.id }} .custom-banner__top-bar--v2 {
    background-color: {{ section.settings.top_bar_bg | default: '#F5F5F5' }};
    height: 170.67px; /* Pic 1: Hug (170.67px) */
    width: 100%;
    /* Pic 1: Padding Top/Bottom 26.67px, Left/Right 133.33px */
    padding: 26.67px 133.33px; 
    display: flex;
    align-items: center;
    justify-content: space-between; 
    box-sizing: border-box;
    position: relative;
    z-index: 10;
  }

  /* Left: Brand (Pic 3) */
  #Section-{{ section.id }} .v2-brand {
    font-weight: 500;
    font-size: 50.67px; 
    text-transform: uppercase;
    width: 403.85px; /* Pic 3 Layout Width */
    height: 50.67px;
    display: flex;
    align-items: center;
  }

  /* Middle: Text (Pic 2) */
  #Section-{{ section.id }} .v2-text {
    font-family: 'Jost', sans-serif;
    font-weight: 400;
    font-size: 42.67px; 
    line-height: 35.8px; 
    color: #000000;
    text-align: center;
    width: 693px; 
    height: 36px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Right: Button Wrapper */
  #Section-{{ section.id }} .v2-btn-wrapper {
    width: 552px;
    height: 117.33px; 
  }

  /* Right: Button */
  #Section-{{ section.id }} .v2-btn {
    background-color: {{ section.settings.top_btn_color | default: '#FFEB3B' }};
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 42.67px; 
    font-weight: 400;
    text-decoration: none;
    text-transform: uppercase;
    color: #000;
    border: 1px solid #000;
    
    /* SLIDE EFFECT SETUP */
    position: relative;
    overflow: hidden; 
    z-index: 1;
    transition: color 0.4s ease;
  }

  /* The Black "Slide" Layer */
  #Section-{{ section.id }} .v2-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%; 
    width: 100%;
    height: 100%;
    background-color: #000000; 
    transition: left 0.4s ease;
    z-index: -1; 
  }

  /* Hover States */
  #Section-{{ section.id }} .v2-btn:hover {
    color: #ffffff; 
    background-color: transparent; /* Allows the black ::before layer to show through clearly */
  }

  #Section-{{ section.id }} .v2-btn:hover::before {
    left: 0; /* Black slides in */
  }

  #Section-{{ section.id }} .v2-arrow {
    margin-left: 20px;
    display: inline-block;
    transition: transform 0.3s ease;
  }

  #Section-{{ section.id }} .v2-btn:hover .v2-arrow {
    transform: translateX(10px);
  }
{%- endstyle -%}

<div class="custom-banner__top-bar--v2">
  <div class="v2-brand">{{ section.settings.brand_text }}</div>
  <div class="v2-text">{{ section.settings.top_center_text }}</div>
  <div class="v2-btn-wrapper">
    <a href="{{ section.settings.top_btn_link }}" class="v2-btn">
      {{ section.settings.top_btn_text }}
      <span class="v2-arrow">&rarr;</span>
    </a>
  </div>
</div>