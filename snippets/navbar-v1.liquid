{%- style -%}
  /* --- Top Bar (NAVBAR V1 - Desktop) --- */
  #Section-{{ section.id }} .custom-banner__top-bar {
    background-color: {{ section.settings.top_bar_bg | default: '#F5F5F5' }};
    height: 64px;
    width: 100%;
    padding: 10px 50px;
    display: flex;
    align-items: center;
    justify-content: space-between; /* Ensures Brand stays left, Button stays right */
    box-sizing: border-box;
    position: relative;
    z-index: 10;
    border-bottom: 1px solid rgba(0,0,0,0.05); /* Optional: clean separator */
    font-family: 'Jost', sans-serif;
  }

  /* Left: Brand (Pic 2) */
  #Section-{{ section.id }} .custom-banner__brand {
    font-weight: 500;
    font-size: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
    width: 151.44px; 
    white-space: nowrap;
    color: #000000;
  }

  /* Middle: Text (Pic 3) */
#Section-{{ section.id }} .custom-banner__top-text {
  font-weight: 400;
  line-height: 13.42px;
  font-size: 16px;
  color: #000000;
  flex-grow: 1; 
  text-align: center;
  position: absolute;
  white-space: nowrap;
  left: 50%;
  transform: translateX(-50%);
}

  /* Right: Button Wrapper (Pic 4) */
  #Section-{{ section.id }} .custom-banner__top-btn-wrapper {
    width: 207px; /* Pic 4: Exact Spec */
    height: 44px; /* Pic 4: Exact Spec */
  }

  #Section-{{ section.id }} .custom-banner__top-btn {
    background-color: {{ section.settings.top_btn_color | default: '#FFEB3B' }};
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Jost', sans-serif;
    font-size: 16px; 
    line-height: 20.48px;
    font-weight: 400;
    text-decoration: none;
    text-transform: uppercase;
    color: #000;
    border: 1px solid #000; 
    
    /* SLIDE EFFECT */
    position: relative;
    overflow: hidden;
    z-index: 1;
    transition: color 0.4s ease;
    gap: 10px; /* Space between text and arrow */
  }

  /* The Black "Slide" Layer */
  #Section-{{ section.id }} .custom-banner__top-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%; 
    width: 100%;
    height: 100%;
    background-color: #000000;
    transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: -1;
  }

  #Section-{{ section.id }} .custom-banner__top-btn:hover {
    color: #ffffff;
  }

  #Section-{{ section.id }} .custom-banner__top-btn:hover::before {
    left: 0;
  }

  #Section-{{ section.id }} .custom-banner__arrow-svg {
    width: 24px; /* Last Pic: Width 24px */
    height: auto;
    fill: none;
    stroke: currentColor; /* Inherits text color (Black then White on hover) */
    stroke-width: 1.5px; /* Last Pic: Border 1.5px */
    transition: transform 0.3s ease;
    display: block;
  }

   #Section-{{ section.id }} .custom-banner__top-btn:hover .custom-banner__arrow-svg {
    transform: translateX(5px);
  }
{%- endstyle -%}

<div class="custom-banner__top-bar">
  <!-- Left -->
  <div class="custom-banner__brand">{{ section.settings.brand_text }}</div>
  
  <!-- Center -->
  <div class="custom-banner__top-text">{{ section.settings.top_center_text }}</div>
  
  <!-- Right -->
  <div class="custom-banner__top-btn-wrapper">
    <a href="{{ section.settings.top_btn_link }}" class="custom-banner__top-btn">
      {{ section.settings.top_btn_text }} 
      
      <!-- Replaced Text Arrow with SVG to match 24px width spec -->
      <svg class="custom-banner__arrow-svg" viewBox="0 0 24 14" xmlns="http://www.w3.org/2000/svg">
        <!-- Long line 24px + Arrowhead -->
        <path d="M0 7H24M18 1L24 7L18 13" stroke="currentColor" stroke-width="1.5"/>
      </svg>
    </a>
  </div>
</div>
