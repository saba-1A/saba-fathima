{%- style -%}
  /* --- Top Bar (NAVBAR V1 - Desktop) --- */
  #Section-{{ section.id }} .custom-banner__top-bar {
    background-color: {{ section.settings.top_bar_bg | default: '#F5F5F5' }};
    height: 64px;
    width: 100%;
    padding: 0 50px; 
    display: flex;
    align-items: center;
    justify-content: space-between; /* Ensures Brand stays left, Button stays right */
    box-sizing: border-box;
    position: relative;
    z-index: 10;
    border-bottom: 1px solid rgba(0,0,0,0.05); /* Optional: clean separator */
  }

  /* Left: Brand (Pic 2) */
  #Section-{{ section.id }} .custom-banner__brand {
    font-weight: 500;
    font-size: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
    width: 151.44px; 
    white-space: nowrap;
  }

  /* Middle: Text (Pic 3) */
#Section-{{ section.id }} .custom-banner__top-text {
  font-weight: 400;
  font-size: 16px;
  color: #000000;
  flex-grow: 1; 
  text-align: center;
  white-space: nowrap;
}

  /* Right: Button Wrapper (Pic 4) */
  #Section-{{ section.id }} .custom-banner__top-btn-wrapper {
    width: 207px; /* Pic 4: Exact Spec */
    height: 44px; /* Pic 4: Exact Spec */
  }

  #Section-{{ section.id }} .custom-banner__top-btn {
    background-color: {{ section.settings.top_btn_color | default: '#FFEB3B' }};
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px; 
    font-weight: 400;
    text-decoration: none;
    text-transform: uppercase;
    color: #000;
    border: 1px solid #000; 
    
    /* SLIDE EFFECT */
    position: relative;
    overflow: hidden;
    z-index: 1;
    transition: color 0.4s ease;
  }

  /* The Black "Slide" Layer */
  #Section-{{ section.id }} .custom-banner__top-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%; 
    width: 100%;
    height: 100%;
    background-color: #000000;
    transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: -1;
  }

  #Section-{{ section.id }} .custom-banner__top-btn:hover {
    color: #ffffff;
  }

  #Section-{{ section.id }} .custom-banner__top-btn:hover::before {
    left: 0;
  }

  #Section-{{ section.id }} .custom-banner__top-arrow {
    margin-left: 10px;
    transition: transform 0.3s ease;
  }

  #Section-{{ section.id }} .custom-banner__top-btn:hover .custom-banner__top-arrow {
    transform: translateX(5px);
  }
{%- endstyle -%}

<div class="custom-banner__top-bar">
  <div class="custom-banner__brand">{{ section.settings.brand_text }}</div>
  <div class="custom-banner__top-text">{{ section.settings.top_center_text }}</div>
  
  <div class="custom-banner__top-btn-wrapper">
    <a href="{{ section.settings.top_btn_link }}" class="custom-banner__top-btn">
      {{ section.settings.top_btn_text }} 
      <span class="custom-banner__top-arrow">&rarr;</span>
    </a>
  </div>
</div>
