{%- style -%}
  /* --- 4K PC 2 WRAPPER --- */
  #Section-{{ section.id }} .hero-bg-4k-wrapper {
    width: 100%;
    max-width: 3840px;
    margin: 0 auto;
    background-color: #ffffff;
    
  }

  /* --- 1. TOP BG (Pic 1) --- */
  #Section-{{ section.id }} .hero-bg-4k-top {
    width: 100%;
    height: 1065px; 
    overflow: hidden;
  }
  #Section-{{ section.id }} .hero-bg-4k-top img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* --- 2. BOTTOM SPLIT SECTION  --- */
  #Section-{{ section.id }} .hero-bg-4k-split {
    display: flex;
    width: 100%;
    height: 1072px; 
    align-items: stretch;
    justify-content: flex-end; 
  }

  /* LEFT TEXT AREA */
  #Section-{{ section.id }} .hero-bg-4k-left-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center; 
    background-color: #ffffff;
    position: relative;
  }

  /* --- 3. RIGHT IMAGE AREA --- */
  #Section-{{ section.id }} .hero-bg-4k-right-image {
    width: 2373.33px; /* Updated from Pic 2 */
    height: 100%;
    overflow: hidden;
    background-color: {{ section.settings.hero_bg_4k_secondary | default: '#F5F5F5' }};
  }

  #Section-{{ section.id }} .hero-bg-4k-right-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    position: relative;
    z-index: 2;
  }

  /* --- 4. TEXT CONTAINER --- */
  #Section-{{ section.id }} .hero-4k-text-container {
    width: 1137px;      
    margin-left: 376px; 
    text-align: left;
    /* Adjust vertical position to match Figma "Top" coordinates roughly */
    margin-top: -100px; 
  }

  /* TITLE */
  #Section-{{ section.id }} .hero-4k-title {
    font-family: 'Jost', sans-serif;
    font-weight: 500;
    font-size: 164.78px; 
    line-height: 100%;
    color: #000000;
    margin: 0;
    text-transform: none;
  }

  /* SUBTITLE */
  #Section-{{ section.id }} .hero-4k-subtitle {
    font-family: 'Jost', sans-serif;
    font-weight: 400;
    font-size: 47.08px; 
    line-height: 140%;
    color: #000000;
    /* Calculated Gap: Subtitle Top (1598) - Title Bottom (1316+165) â‰ˆ 117px */
    margin-top: 117px; 
    margin-bottom: 118px; /* Calculated Gap to button */
    letter-spacing: 0px;
    max-width: 1137px;
  }

  /* --- 5. BUTTON --- */
  #Section-{{ section.id }} .hero-4k-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 517.89px;  
    height: 117.7px;  
    background-color: #000000;
    color: #ffffff;
    text-decoration: none;
    font-family: 'Jost', sans-serif;
    font-weight: 400; 
    font-size: 37.66px; 
    line-height: 48.21px;
    text-transform: uppercase; 
    letter-spacing: 0;
    transition: background-color 0.3s ease;
    gap: 30px; /* Space between text and arrow */
  }

  #Section-{{ section.id }} .hero-4k-btn:hover {
    background-color: #333333;
  }

  /* BUTTON ARROW */
  .btn-arrow-line {
    width: 60.05px; 
    height: 0px;
    border-top: 3.53px solid #ffffff; 
    display: inline-block;
    position: relative;
  }
  /* THE ARROW HEAD */
.btn-arrow-line::after {
  content: "";
  position: absolute;
  right: 0;
  top: -1.765px; /* Half of your 3.53px border to center it */
  
  /* Create the V-shape */
  width: 10px;
  height: 10px;
  border-top: 3.53px solid #ffffff;
  border-right: 3.53px solid #ffffff;
  
  /* Rotate to point right */
  transform: translateY(-50%) rotate(45deg);
}

  /* --- 6. NEW BOTTOM BAR  --- */
  #Section-{{ section.id }} .hero-bg-4k-bottom-bar {
    width: 100%;
    background-color: #F5F5F5; /* rgba(245, 245, 245, 1) */
    padding: 26.67px 133.33px; /* Pic 4 Padding */
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
  }

  #Section-{{ section.id }} .hero-bottom-text {
    font-family: 'Jost', sans-serif;
    font-weight: 400; /* Regular */
    font-size: 42.67px; /* Pic 5 */
    line-height: 35.8px;
    color: #000000;
    text-align: center;
    text-transform: uppercase;
    margin: 0;
  }
{%- endstyle -%}

<div class="hero-bg-4k-wrapper">
  
  <!-- TOP IMAGE -->
  <div class="hero-bg-4k-top">
    {% if section.settings.hero_bg_image_4k != blank %}
      <img src="{{ section.settings.hero_bg_image_4k | image_url: width: 3840 }}" alt="4K Top Banner">
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>

  <!-- SPLIT SECTION -->
  <div class="hero-bg-4k-split">
    <div class="hero-bg-4k-left-content">
      <div class="hero-4k-text-container">
        
        {%- comment -%} Title {%- endcomment -%}
        {% if section.settings.hero_title_4k != blank %}
          <h2 class="hero-4k-title">{{ section.settings.hero_title_4k }}</h2>
        {% endif %}
        
        {%- comment -%} Subtitle {%- endcomment -%}
        {% if section.settings.hero_subtitle_4k != blank %}
          <p class="hero-4k-subtitle">{{ section.settings.hero_subtitle_4k }}</p>
        {% endif %}

        {%- comment -%} Button {%- endcomment -%}
        {% if section.settings.hero_btn_text_4k != blank %}
          <a href="{{ section.settings.hero_btn_link }}" class="hero-4k-btn">
            <span>{{ section.settings.hero_btn_text_4k }}</span>
            <!-- Custom Line Arrow based on Pic 10 -->
            <span class="btn-arrow-line"></span>
          </a>
        {% endif %}
        
      </div>
    </div>
       
    <div class="hero-bg-4k-right-image">
      {% if section.settings.hero_bg_image_4k_right != blank %}
        <img src="{{ section.settings.hero_bg_image_4k_right | image_url: width: 2400 }}" alt="4K Right Split Image">
      {% else %}
        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </div>

  <!-- NEW BOTTOM BAR (Pic 4) -->
  <div class="hero-bg-4k-bottom-bar">
    <p class="hero-bottom-text">
      SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL
    </p>
  </div>

</div>